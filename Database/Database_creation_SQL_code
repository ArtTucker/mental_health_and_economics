-- MentalHealth
-- Regrouping data on income per capita in the US.
CREATE TABLE "Income" (
    "State" string   NOT NULL,
    "Population" int   NOT NULL,
    "ID" int   NOT NULL,
    "IncomePerYear" int   NOT NULL,
    "Ethnicity" string   NOT NULL,
    "Poor" string   NOT NULL,
    "LoweMiddleClass" string   NOT NULL,
    "UpperMiddleClass" string   NOT NULL,
    "UpperClass" string   NOT NULL,
    "Gender" string   NOT NULL,
    CONSTRAINT "pk_Income" PRIMARY KEY (
        "State"
     ),
    CONSTRAINT "uc_Income_ID" UNIQUE (
        "ID"
    )
);

-- Mental Health services availability per state.
CREATE TABLE "MentalHealthService" (
    "State" string   NOT NULL,
    "ZipCode" int   NOT NULL,
    "HospitalName" string   NOT NULL,
    "HospitalID" int   NOT NULL,
    "Status" int   NOT NULL,
    "Capacity" int   NOT NULL,
    "PopulationCoverage" int   NOT NULL,
    "StatePopulation" int   NOT NULL,
    "%Coverage" float   NOT NULL,
    "TypeOfHospital" string   NOT NULL,
    CONSTRAINT "pk_MentalHealthService" PRIMARY KEY (
        "State"
     )
);

-- Population per state.
CREATE TABLE "Population" (
    "State" string   NOT NULL,
    "Population" int   NOT NULL,
    "CountMentalHealthPeople" int   NOT NULL,
    "NumberDedicatedHospital" int   NOT NULL,
    "NumberHospital" int   NOT NULL,
    "%Injured/Population" float   NOT NULL,
    CONSTRAINT "pk_Population" PRIMARY KEY (
        "State"
     )
);

ALTER TABLE "Income" ADD CONSTRAINT "fk_Income_State_Population" FOREIGN KEY("State", "Population")
REFERENCES "Population" ("State", "Population");

ALTER TABLE "MentalHealthService" ADD CONSTRAINT "fk_MentalHealthService_State" FOREIGN KEY("State")
REFERENCES "Income" ("State");

ALTER TABLE "Population" ADD CONSTRAINT "fk_Population_State" FOREIGN KEY("State")
REFERENCES "MentalHealthService" ("State");